<div class="page">
  <div class="title">
    <h1>Account</h1>

    <ul class="actions">
      <% if policy(@user).update? %>
        <li><%= link_to action_tag(:update, @user), edit_user_path(@user) %></li>
      <% end %>
      <% if policy(@user).toggle? %>
        <li><%= link_to action_tag(:toggle, @user), toggle_user_path(@user), method: :patch %></li>
      <% end %>
      <% if policy(@user).destroy? %>
        <li><%= link_to action_tag(:destroy, @user), user_path(@user), method: :delete, data: { confirm: "Are you sure?" } %></li>
      <% end %>
    </ul>
  </div>

  <div class="details">
    <%= avatar_tag(@user, class: "border") %>
    <p class="join">
      Joined on <%= date_tag(@user.created_at, time: false) %>
    </p>

    <% if policy(@user).show_email? %>
      <p class="email">
        <%= fa_icon("envelope") %> <%= @user.email %>
      </p>
    <% end %>

    <% if @user.rank %>
      <p class="rank">
        <%= fa_icon("shield") %> <%= @user.rank %>
      </p>
    <% end %>

    <%= link_to "Uploads", user_uploads_path(@user) %>
  </div>

  <div class="characters">
    <h2>
      Characters
      <% if policy(Character.new(user: @user)).create? %>
        <%= link_to fa_icon("plus"), new_user_character_path(@user) %>
      <% end %>
    </h2>

    <ul>
      <% @user.characters.each do |character| %>
        <li>
          <%= character.main? ? fa_icon("star") : fa_icon("star-o") %>
          <%= link_to character_tag(character), user_character_path(@user, character) %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="posts">
    <h2>Posts</h2>

    <table class="list">
      <tr>
        <th>Postable</th>
        <th>Posts by User</th>
        <th>Last Post by <%= user_tag(@user) %></th>
        <th>Last Post</th>
      </tr>
      <% @postables.each do |postable, post, count| %>
        <tr>
          <td>
            <%= link_to postable_path(postable) do %>
              <%= postable %>
            <% end %>
          </td>
          <td>
            <%= count %>
          </td>
          <td>
            <%= link_to postable_post_path(postable, post) do %>
              <%= date_tag(post.created_at, relative: true) %>
            <% end %>
          </td>
          <td>
            <% if postable.last_post %>
              <%= link_to postable_post_path(postable, postable.last_post) do %>
                <%= character_tag(postable.last_post.user.main) %>
                <%= date_tag(postable.last_post.created_at, relative: true) %>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
    <%= paginate @postables %>
  </div>
</div>
