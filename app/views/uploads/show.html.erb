<div class="page">
  <div class="title">
    <h1>Upload #<%= @upload.id %></h1>

    <ul class="actions">
      <% if policy(@upload).destroy? %>
        <li><%= link_to "Delete", user_upload_path(@user, @upload), method: :delete, data: { confirm: "Are you sure?" } %></li>
      <% end %>
    </ul>
  </div>

  <%= image_tag @upload.url, width: "100%" %>
  <p style="font-size:12px;font-family:monospace;"><%= @upload.url %></p>
</div>
