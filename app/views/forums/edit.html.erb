<div class="page">
  <div class="title">
    <h2>
      <%= link_to "Forums", forums_path %> /
      <%= link_to @forum, forum_path(@forum) %>
    </h2>

    <% if policy(@forum).destroy? %>
      <ul class="actions">
        <li><%= link_to action_tag(:destroy, @forum), forum_path(@forum), method: :delete, data: { confirm: "Are you sure?" } %></li>
      </ul>
    <% end %>
  </div>

  <%= render "forums/form", forum: @forum %>
</div>