<div class="page">
  <div class="title">
    <h1>Progression Bosses</h1>
  </div>

  <ul class="button-list">
    <% Boss.last(2).each do |boss| %>
      <li>
        <%= link_to raid_boss_path(boss.raid, boss) do %>
          <%= boss %>

          <% if boss.posts.any? %>
            <span class="pull-right">
              <%= character_tag(boss.last_post.user.main) %>
              <%= date_tag(boss.last_post.created_at, relative: true) %>
            </span>
          <% end %>
        <% end %>
      </li>
    <% end %>
  </ul>

  <div class="title">
    <h1>Forums</h1>

    <ul class="actions">
      <% if policy(Forum).create? %>
        <li><%= link_to fa_icon("file-o"), new_forum_path %></li>
      <% end %>
    </ul>
  </div>

  <%= render "forums/table", topics: @topics, topics_label: "Recent Topics" %>

  <ul class="button-list">
    <% @forums.each do |forum| %>
      <li>
        <%= link_to forum_path(forum), class: "button" do %>
          <%= forum %>
          (<%= forum.topics.count %>)
          <% if forum.freshest %>
            <span class="pull-right">
              <%= forum.freshest.title %>
              <%= date_tag(forum.freshest.posts_updated_at, relative: true) %>
            </span>
          <% end %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>