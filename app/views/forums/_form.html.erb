<%= simple_form_for forum do |f| %>
  <%= f.input :name %>
  <%= f.input :row_order, label: 'Order' %>

  <% ordered_ranks = Rank.all.sort { |a, b| b <=> a } %>
  <%= f.association :readable_ranks, collection: ordered_ranks, as: :check_boxes %>
  <%= f.association :writable_ranks, collection: ordered_ranks, as: :check_boxes %>

  <%= f.button :submit %>
<% end %>
