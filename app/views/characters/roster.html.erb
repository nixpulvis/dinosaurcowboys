<div class="page">
  <div class="title">
    <h1>Roster</h1>
  </div>

  <ul class="tiles">
    <% @characters.each do |character| %>
      <li class="character-tile">
        <%= image_tag character.thumbnail, size: "45x45" %>
        <span class="name <%= character.klass %>"><%= character %></span>
        <%#= image_tag "role_#{character.role.downcase}.gif", size: "22x22" %>
        <%= character.spec %>
        <%#= character.user.rank %>
        <%#= date_tag(character.user.created_at, time: false) %>
      </li>
    <% end %>
    <div class="clearfix"></div>
  </ul>
  <%#= render 'characters/table', characters: @characters %>
</div>
